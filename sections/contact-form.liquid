<div class="flex flex-col items-center my-8">
    {%  form 'contact' %} 
        <div class="max-w-7xl mx-auto justify-center flex-1 items-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label for="contact_name" class="uppercase text-xs text-gray-500 font-medium">Name</label>
                    <input type="text" class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label for="contact_email" class="uppercase text-xs text-gray-500 font-medium">Email</label>
                    <input type="email" class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[email]" id="contact_email">
                </div>
            </div>
            <div class="flex px-1 mb-3">
                <div class="w-full px-3">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_message">Message</label>
                    <textarea class="border py-3 px-4 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_message"></textarea>
                </div>
            </div>
            <div class="flex px-1 mb-3">
                <div class="w-full px-3">
                    <input type="submit" class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700" value="Submit message">
                </div>
            </div>
        </div>
    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "presets": [
            {
                "name": "Contact Form"
            }
        ]
}
{% endschema %}