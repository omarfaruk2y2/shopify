<div class="swiper-slide bg-cover bg-center h-full pt-52 pb-96"  
    style="background-image: url({% if section.settings.image != blank %}{{ section.settings.image | img_url: 'master' }}{% else %}{{ 'hero-slider-img.png' | asset_url }}{% endif %})"
    >

    <div class="max-w-[634px] mx-auto">

        <!-- Title -->
        <h1 class="text-3xl font-gambetta md:text-[40px] lg:text-6xl xl:text-[74px] font-normal leading-[84px] -tracking-[2.96px] text-[#423328] text-center mb-3">
            {{ section.settings.title }}
        </h1>

        <!-- Subtitle -->
        <p class="text-lg md:text-xl font-generalSans font-normal text-[#423328] text-center mb-10">
            {{ section.settings.subtitle }}
        </p>
                    
        <div class="flex justify-center">
            <!-- Button -->
            <a href="{{ section.settings.button_link | default: '#' }}" class="bg-[#9D744D] text-[#FAF6EE] font-medium text-base font-generalSans uppercase px-12 py-3 hover:bg-black transition">
                {{ section.settings.button_text }}
            </a>
        </div>
    </div>

</div>

{% schema %}
    {
      "name": "Banner One",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Background Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Slide Title",
          "default": "The Magic of Arabian Perfume"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Slide Subtitle",
          "default": "Free home delivery on orders over $200. Donâ€™t miss discount."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Shop exclusive"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ],
      "presets": [
        {
          "name": "Banner One",
          "category": "Custom"
        }
      ]
    }
{% endschema %}
