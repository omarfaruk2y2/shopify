{% for block in section.blocks %}
<div class="text-center py-3 font-normal text-[#423328]" style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.text_color }}">
    {{ block.settings.text }}
</div>
{% endfor %}

{% schema %}
{
"name": "Announcement Bar",
"max_blocks": 12,
"settings": [],
"blocks": [
    {
        "type": "announcement",
        "name": "t:sections.announcement-bar.blocks.announcement.name",
        "settings": [
            {
                "type": "richtext",
                "id": "text",
                "label": "Text",
                "default": "<p>Free home delivery on orders over $200. Donâ€™t miss discount.</p>"
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background color",
                "default": "#F1E6D2"
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text color",
                "default": "#423328"
            }
        ]
    }
],
"default": {
    "blocks": [
        {
            "type": "announcement",
        }
    ]
}
}
{% endschema %}
